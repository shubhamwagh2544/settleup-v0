generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int         @id @db.Integer @default(autoincrement()) @map("id")
  firstName       String?     @db.VarChar(255) @map("first_name")
  lastName        String?     @db.VarChar(255) @map("last_name")
  email           String      @unique @db.VarChar(255) @map("email")
  password        String      @db.VarChar(255) @map("password")
  phoneNumber     String?     @unique @db.VarChar(255) @map("phone_number")
  address         String?     @db.VarChar(255) @map("address")
  profilePic      String?     @db.VarChar(255) @map("profile_pic")
  createdAt       DateTime    @default(now()) @db.Timestamp(6) @map("created_at")
  updatedAt       DateTime    @default(now()) @db.Timestamp(6) @map("updated_at")
  isActive        Boolean     @default(true) @map("is_active")
  mfaEnabled      Boolean?    @default(false) @map("mfa_enabled")
  defaultLang     String?     @default("en") @db.VarChar(255) @map("default_lang")
  isAdmin         Boolean     @default(false) @map("is_admin")
  Room            Room[]
}

model Room {
  id              Int         @id @db.Integer @default(autoincrement()) @map("id")
  name            String      @db.VarChar(255) @map("name")
  description     String?     @db.Text @map("description")
  users           User[]
  createdAt       DateTime    @default(now()) @db.Timestamp(6) @map("created_at")
  updatedAt       DateTime    @default(now()) @db.Timestamp(6) @map("updated_at")
  roomType        String      @default("public") @db.VarChar(255) @map("room_type")
  roomPic         String?     @db.VarChar(255) @map("room_pic")
  isActive        Boolean     @default(true) @map("is_active")
  adminId         Int         @db.Integer @map("admin_id")
  admin           User        @relation(fields: [adminId], references: [id])
}
